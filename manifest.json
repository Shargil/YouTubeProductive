{
    "name": "YouTube Productive",
    "description": "YouTube Productive description",
    "version": "0.1.0",
    "manifest_version": 3,
    "icons": {
        "16": "icons/youtube-16x16.png",
        "32": "icons/youtube-32x32.png",
        "48": "icons/youtube-32x32.png",
        "128": "icons/youtube-128x128.png"
    },
    "background": {
        "service_worker": ["./background.js"]
    },
    "options_page": "./options.html",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/youtube-16x16.png",
            "32": "icons/youtube-32x32.png",
            "48": "icons/youtube-32x32.png",
            "128": "icons/youtube-128x128.png"
        }
    },
    "permissions": [
        "tabs",
        "webRequest",
        "https://www.youtube.com/*",
        "storage"
    ]
}