{
    "name": "YouTube Productive",
    "description": "YouTube Productive description",
    "version": "0.1.0",
    "manifest_version": 3,
    "background": {
        "service_worker": "background.js"
    },
    "permissions": [
        "storage",
        "tabs",
        "webRequest",
        "scripting"
    ],
    "host_permissions": [
        "https://www.youtube.com/*"
    ],
    "action": {
        "default_popup": "./popup/popup.html",
        "default_icon": {
            "16": "icons/youtube-16x16.png",
            "32": "icons/youtube-32x32.png",
            "48": "icons/youtube-32x32.png",
            "128": "icons/youtube-128x128.png"
        }
    },
    "icons": {
        "16": "icons/youtube-16x16.png",
        "32": "icons/youtube-32x32.png",
        "48": "icons/youtube-32x32.png",
        "128": "icons/youtube-128x128.png"
    },
    "options_page": "./options.html"
}